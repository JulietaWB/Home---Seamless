@{
    ViewData["Title"] = "Login";
}

<div class="bodyLogin">
  <div class="formulario">
    <div>
      <img class="logoLogin" src=/imagenes/logo.png >
    </div>
    <h2>@ViewBag.MensajeError </h2>

    <form method="post" action= '@Url.Action("ValidarUsuario", "Account")'> 
      
      <h3> Correo Electrónico </h3>
      <input type="email" name="email" required> 
      
      <h3> Contraseña </h3>
      <input type="password" name="contra" required> 
      
      <a class="icon-link icon-link-hover" href='@Url.Action("Olvide", "Home")'>
        ¿Olvidaste tu contraseña?
        <svg class="bi" aria-hidden="true"><use xlink:href="#arrow-right"></use></svg>
      </a>

      <p> <input class="boton" type="submit" value="Iniciar Sesión">  </p>
    </form>

    

    <a class="icon-link icon-link-hover" href='@Url.Action("Registro", "Home")'>
      ¿No tenés una cuenta?
      <svg class="bi" aria-hidden="true"><use xlink:href="#arrow-right"></use></svg>
    </a>
  </div>

  <div class="fotoLogin">  </div>

</div>